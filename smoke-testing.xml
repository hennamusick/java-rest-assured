<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BVT High Priority Suite" verbose="1">
    <!-- High-priority (priority = 1) tests only -->
